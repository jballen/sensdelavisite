<div class="comment">
    <div class="comment-content">
      <span class="comment-body"><%= comment.body%></span>
      <span class="date"> - <%= time_ago_in_words(comment.created_at) %> ago</span>
    </div>

    <% if current_user_or_admin?(comment.user) %>
      <div><%= link_to 'Delete', [comment.article, comment], method: :delete, data: {confirm: "Are you sure you want to delete your comment?"} %></div>
    <% end %>
</div>